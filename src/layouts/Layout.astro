---
import { DarkModeButton } from '../components/DarkModeButton.jsx';
import { HamburgerMenu } from '../components/HamburgerMenu.jsx';
import DesktopMenu from '../components/DesktopMenu.astro';

import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/polkadot-hub-logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-black">
    <nav class="flex bg-green justify-between h-12 items-center">
      <DesktopMenu />
      <HamburgerMenu client:only />
    </nav>
    <slot />
    <footer class="bg-gray-700">

    </footer>
  </body>
</html>

<style is:global>
  html {
    @apply !font-unbounded;
  }
  h3,h4,h5,h6,p,li,a {
    @apply text-black dark:text-white;
  }
  code {
  	font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>

<script>
  const isDarkMode = window.localStorage.getItem('dark');
  if (isDarkMode === null || isDarkMode === 'true') {
    document.documentElement.classList.add('dark');
  } else {
    document.documentElement.classList.remove('dark');
  }
</script>
