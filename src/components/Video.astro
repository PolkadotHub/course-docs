---
export interface VideoProps {
  source: string;
  type?: string;
}

const { source, type } = Astro.props;
---

<div class="flex justify-center items-center">
  <video class="rounded border border-black dark:border-white max-w-full" width="1280" height="720" controls>
    <source src={source} type={type ?? 'video/mp4'}>
  </video>
</div>
